---
import Layout from "src/layouts/Layout.astro";
import {siteConfig} from "src/config/site-config";
import BlogPost from "src/components/BlogPost.astro";

const posts = Object.values(import.meta.glob('./posts-old/*.{md,mdx}', {eager: true}));
---
<Layout title="Jesus's Blog">
    <!-- component -->
    <section class="bg-white dark:bg-gray-900">
        <div class="container px-6 py-10 mx-auto">
            <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-gray-800 dark:text-white">{siteConfig.title}</h1>

            <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
              {posts.map((post: any) =>
                      <BlogPost {...post}/>
              )}
            </div>
        </div>
    </section>
</Layout>
