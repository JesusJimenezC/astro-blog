---
import type { GetStaticPaths } from "astro";
import { siteConfig } from '@config/site-config';
import Layout from "@layouts/Layout.astro";
import AuthorCard from "@components/AuthorCard.astro";
import { getCollection } from "astro:content";

const authors = await getCollection("author");
---
<Layout title="Authors List">
  <section class="container px-6 py-10 mx-auto">
    <h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white">{siteConfig.title}</h1>
  </section>

  <section class="grid grid-cols-1 sm:grid-cols-2 gap-2">
    {
      authors.map((author) => (
        <AuthorCard author={author} />
      ))
    }
  </section>
</Layout>
